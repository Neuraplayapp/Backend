PORT=3001
RENDER=false
VITE_PLATFORM=local

# ===== AI SERVICES - REAL KEYS =====
# Fireworks AI - Primary LLM and Image Generation
VITE_FIREWORKS_API_KEY=fireworks
FIREWORKS_API_KEY=fireworks
# Fireworks API Key (same name as Render production)
Neuraplay=fireworks

# ElevenLabs - Text-to-Speech
VITE_ELEVENLABS_API_KEY=demo-elevenlabs-key
ELEVENLABS_AGENT_ID=agent_2201k13zjq5nf9faywz14701hyhb

# AssemblyAI - Speech-to-Text
VITE_ASSEMBLYAI_API_KEY=demo-assemblyai-key
ASSEMBLYAI_API_KEY=demo-assemblyai-key

# Serper - Web Search (using Render's environment variable name)
# IMPORTANT: Replace with your actual Serper API key from https://serper.dev
# Get 2,500 free searches/month with a free account
# Remove the "REPLACE_ME" prefix when you add your real key
Serper_api=REPLACE_ME_your_actual_serper_api_key_here

# WeatherAPI.com - Weather Data (using Render's environment variable name)
# Note: Replace with actual WeatherAPI.com key for local development
WEATHER_API=demo-weatherapi-key

# ===== DATABASE CONFIGURATION =====
# Use LOCAL PostgreSQL for development
DATABASE_URL=postgresql://postgres:1332@127.0.0.1:5432/neuraplay
POSTGRES_DISABLED=false
DATABASE_DISABLED=false
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=1332
POSTGRES_DATABASE=neuraplay
POSTGRES_SSL=false

# Redis - Cache and Session Storage (DISABLED for development)
REDIS_DISABLED=true
DISABLE_REDIS=true

# Vector Database (PostgreSQL with pgvector extension)
VECTOR_DB_URL=postgresql://postgres:1332@127.0.0.1:5432/neuraplay
VECTOR_DB_DIMENSION=768
VECTOR_DB_TABLE=embeddings

# ===== SECURITY CONFIGURATION =====
# JWT and Session Security
JWT_SECRET=dev-jwt-secret-key-for-local-development-only
SESSION_SECRET=dev-session-secret-key-for-local-development-only
ENCRYPTION_KEY=dev-encryption-key-32-chars-long

# Admin Credentials (user sets password on first login via database)
