# ADMIN_PASSWORD_HASH is not needed - admin uses NEEDS_PASSWORD_SETUP flow

# CORS and API Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001
API_RATE_LIMIT=10000
API_WINDOW_MS=900000

# ===== DEVELOPMENT CONFIGURATION =====
LEGACY_ROUTES=true
LOG_LEVEL=info
LOG_FILE=logs/app.log

# API Endpoints - Point to local server for development
VITE_API_BASE=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_BRIDGE_SERVICE_URL=ws://localhost:3001

# Real-time Communication
VITE_ABLY_API_KEY=demo-ably-key
ABLY_API_KEY=demo-ably-key

# Performance Configuration
