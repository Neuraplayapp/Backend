# ========================================================
# NeuraPlay AI Platform - Development Environment Template
# ========================================================
# Copy this file to ".env" and replace all placeholders
# with your real credentials. Never commit the ".env" file
# to the repository.
# ========================================================

# ===== PLATFORM CONFIGURATION =====
NODE_ENV=development
PORT=3001
RENDER=false
VITE_PLATFORM=local

# ===== AI SERVICES =====
# Fireworks AI - Primary LLM and Image Generation
VITE_FIREWORKS_API_KEY=YOUR_FIREWORKS_KEY_HERE
FIREWORKS_API_KEY=YOUR_FIREWORKS_KEY_HERE
Neuraplay=YOUR_FIREWORKS_KEY_HERE

# ElevenLabs - Text-to-Speech
VITE_ELEVENLABS_API_KEY=YOUR_ELEVENLABS_KEY_HERE
ELEVENLABS_AGENT_ID=YOUR_ELEVENLABS_AGENT_ID_HERE

# AssemblyAI - Speech-to-Text
VITE_ASSEMBLYAI_API_KEY=YOUR_ASSEMBLYAI_KEY_HERE
ASSEMBLYAI_API_KEY=YOUR_ASSEMBLYAI_KEY_HERE

# Serper - Web Search
Serper_api=YOUR_SERPER_API_KEY_HERE

# Weather API
WEATHER_API=YOUR_WEATHERAPI_KEY_HERE

# Real-time Communication (Ably)
VITE_ABLY_API_KEY=YOUR_ABLY_KEY_HERE
ABLY_API_KEY=YOUR_ABLY_KEY_HERE

# ===== DATABASE CONFIGURATION =====
# Use Render PostgreSQL for development
DATABASE_URL=DATABASE_URL
POSTGRES_DISABLED=false
DATABASE_DISABLED=false
POSTGRES_SSL=false

# ===== REDIS (CACHE & SESSION) =====
REDIS_DISABLED=true
DISABLE_REDIS=true
REDIS_URL=redis://localhost:6379

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=YOUR_JWT_SECRET_HERE
SESSION_SECRET=YOUR_SESSION_SECRET_HERE
ENCRYPTION_KEY=YOUR_32_CHAR_ENCRYPTION_KEY_HERE

# ===== ADMIN =====
ADMIN_EMAIL=YOUR_ADMIN_EMAIL_HERE
# Admin password setup happens via database

# ===== CORS CONFIGURATION =====
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001
API_RATE_LIMIT=10000
API_WINDOW_MS=900000

# ===== LOGGING =====
LEGACY_ROUTES=true
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== API ENDPOINTS =====
VITE_API_BASE=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_BRIDGE_SERVICE_URL=ws://localhost:3001

# Google login api keys

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

FACEBOOK_CLIENT_ID=3913756845587664
FACEBOOK_CLIENT_SECRET=712ee705b54b54f2c036b2682c47ac5c
FACEBOOK_CALLBACK_URL=http://localhost:3001/api/auth/facebook/callback

APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./AuthKey_XXXXXXXX.p8
APPLE_CALLBACK_URL=http://localhost:3001/api/auth/apple/callback


# ===== PERFORMANCE & CACHE =====
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=80
MAX_REQUEST_SIZE=10mb
MAX_FILE_SIZE=50mb
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
CACHE_COMPRESSION=true

# ===== EMAIL CONFIGURATION (Gmail/Workspace) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=YOUR_SMTP_EMAIL_HERE
SMTP_PASSWORD=YOUR_SMTP_APP_PASSWORD_HERE

# ===== BASE URL =====
BASE_URL=https://www.neuraplay.org
VITE_BASE_URL=https://www.neuraplay.org
